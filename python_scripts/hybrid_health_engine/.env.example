# Jira Configuration
JIRA_URL=https://your-domain.atlassian.net
JIRA_USERNAME=your-email@domain.com
JIRA_API_TOKEN=your-api-token
JIRA_PROJECT_KEY=PROJECT

# GitHub Configuration
GITHUB_TOKEN=your-github-token
GITHUB_REPO=owner/repo-name

# Firebase Configuration (for data storage)
FIREBASE_API_KEY=your-api-key
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-bucket-name

# Computer Vision Settings
CV_MODEL_PATH=models/project_phase_detector.pth
CV_MODEL_TYPE=detection
IMAGE_INPUT_SIZE=512

# Data Storage Paths
IMAGE_STORAGE_DIR=data/images
DRONE_FOOTAGE_DIR=data/drone
MODEL_WEIGHTS_DIR=models
CACHE_DIR=.cache

# System Settings
DEBUG_MODE=False
LOG_LEVEL=INFO
ASYNC_WORKERS=4

# Alert Thresholds
VARIANCE_YELLOW_THRESHOLD=0.15
VARIANCE_RED_THRESHOLD=0.25

# Phase Weights
FOUNDATION_WEIGHT=0.2
FRAMING_WEIGHT=0.3
EXTERIOR_WEIGHT=0.2
INTERIOR_WEIGHT=0.2
FINISHING_WEIGHT=0.1